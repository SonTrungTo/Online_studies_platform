{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "jest", "react", "codeceptjs"
    ],
    "rules": {
        "react/prop-types": 0,
        "no-unused-vars": [
            "error",
            { "argsIgnorePattern": "^_" }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}